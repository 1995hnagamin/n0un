.PHONY: all test

FILES[] =
	testUtil
	testParser
	testTyping
	testEval

USE_OCAMLFIND = true
OCAMLPACKS[] =
	oUnit

NATIEV_ENABLED = false

TESTER = test
OCAMLINCLUDES += ../src
OCAML_LIBS += ../src/n0unlib

.DEFAULT: all

all: $(OCamlProgram $(TESTER), $(FILES))

test :	all
				./$(TESTER)

.PHONY: clean
clean:
  rm -f \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
		 $(TESTER).run $(TESTER).opt $(TESTER) *.omc \
		 *.cache
